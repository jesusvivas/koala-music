---
import Cancionsonando from "../components/Cancionsonando.tsx";
import Tarjetamusica from "../components/Tarjetamusica.tsx";
import Layout from "../layouts/Layout.astro";
import axios from "axios";

const songs = (await axios.get("https://api.institutoalfa.org/api/songs")).data.songs;
---

<Layout>
<div class="flex">
    <section class="flex-1">
    <!-- lista de canciones -->
    {
        songs.map(function (song: any) {
        return <Tarjetamusica song={song} client:visible />;
        })
    }
    </section>

    <section class="flex-1">
    <!-- cancion sonando -->
    <Cancionsonando client:visible />
    </section>
</div>
</Layout>
